  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qavajs/steps-playwright/issues"
  },
  "homepage": "https://github.com/qavajs/steps-playwright#readme",
  "devDependencies": {
    "@cucumber/cucumber": "^12.1.0",
    "@qavajs/console-formatter": "^1.0.0",
    "@qavajs/core": "^2.5.2",
    "@qavajs/html-formatter": "^0.18.1",
    "@qavajs/memory": "^1.10.2",
    "@qavajs/validation": "^1.2.1",
    "@qavajs/webstorm-adapter": "^8.0.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.15",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "electron": "^36.3.2",
    "express": "^5.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
